{
	"name": "obsidian-svelte-template",
	"version": "1.0.0",
	"description": "Svelte 5 + Tailwind CSS v4 template for Obsidian plugins",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "vite build --watch --mode development",
		"build": "tsc -noEmit -skipLibCheck && svelte-check --tsconfig ./tsconfig.json && vite build --mode production",
		"svelte-check": "svelte-check --tsconfig ./tsconfig.json",
		"svelte-check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"check": "bun run format:check && bun run lint:check && bun run svelte-check && bun run build",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint . --fix",
		"lint:check": "eslint . --max-warnings 0"
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/node": "^16.11.6",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"prettier": "3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tslib": "2.4.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.35.1",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.18",
		"obsidian": "latest",
		"tailwindcss": "^4.1.18"
	}
}
