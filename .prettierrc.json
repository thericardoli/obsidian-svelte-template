{
	"$schema": "https://json.schemastore.org/prettierrc",
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": false,
	"trailingComma": "all",
	"printWidth": 100,
	"semi": true,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": ["*.md"],
			"options": {
				"proseWrap": "preserve"
			}
		}
	]
}
